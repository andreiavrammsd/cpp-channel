{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch LLDB",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--gtest_color=yes"
            ],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        }
    ]
}
